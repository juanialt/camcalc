@import 'kouto-swiss'

box-sizing-reset();
normalize();

/* Normalize Corrections
======================================== */

button,
input,
optgroup,
select,
textarea
    font-family 'Roboto', sans-serif

table
    border-collapse collapse

/* Base Rules
======================================== */

html
    // font-family 'Roboto', sans-serif
    font-size 62.5% //10px

body
    font-size 1.3rem
    font-size auto
    color rgba(0, 0, 0, 0.87)
